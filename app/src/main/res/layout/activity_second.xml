<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    tools:context=".SecondActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="380dp"
        android:layout_height="250dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:backgroundTint="#2F80ED"
            app:cardCornerRadius="12dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:layout_gravity="center" />
        </androidx.cardview.widget.CardView>

        <ImageButton
            android:id="@+id/heart_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/heart"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/result_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-medium"
            android:text="Explore the nightlife of your city"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="free"
            android:layout_gravity="bottom"
            android:textSize="24sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PriceðŸ’°"
            android:layout_marginStart="38dp"
            android:layout_marginBottom="18dp"
            android:layout_gravity="bottom"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"

            >
            <View
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:background="@drawable/user_icon1" />
            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/user_icon2" />
            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/user_icon3" />
            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/user_icon4" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Participants"
            android:layout_gravity="center"
            android:layout_marginTop="100dp" />

        <View
            android:layout_width="81dp"
            android:layout_height="10dp"
            android:background="@drawable/bar"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="35dp"
            android:layout_marginEnd="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accessibility"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="15dp"
            android:textSize="12sp"
            android:layout_marginEnd="22dp" />

    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button"
        android:layout_width="380dp"
        android:layout_height="65dp"
        app:cornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        app:backgroundTint="@null"
        android:background="@drawable/button_gradient_background"
        android:text="Next" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:labelFor="@id/dropdown"
        app:layout_constraintBottom_toTopOf="@id/dropdown_card"
        app:layout_constraintStart_toStartOf="@id/dropdown_card"
        android:layout_marginBottom="5dp"
        android:textColor="@color/white" />

    <androidx.cardview.widget.CardView
        android:id="@+id/dropdown_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/button"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="65dp"
        android:layout_marginStart="15dp"
        app:cardCornerRadius="10dp">

        <Spinner
            android:id="@+id/dropdown"
            android:layout_width="180dp"
            android:layout_height="55dp"
            android:paddingLeft="10dp"
            android:dropDownWidth="170dp"
            android:spinnerMode="dropdown" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@id/range_slider1"
        android:text="Price"
        android:layout_marginStart="20dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/range_slider1"
        app:layout_constraintStart_toStartOf="@id/range_slider1" />

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/range_slider1"
        android:layout_width="200dp"
        android:layout_height="10dp"
        android:valueFrom = "10.0"
        app:trackColor = "#6B82F7"
        android:valueTo = "100.0"
        app:layout_constraintStart_toEndOf="@id/dropdown_card"
        app:layout_constraintTop_toBottomOf="@id/button"
        android:layout_marginTop="50dp"
        app:values="@array/slider_values" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@id/range_slider2"
        android:text="Accessibility"
        android:layout_marginStart="20dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/range_slider2"
        app:layout_constraintStart_toStartOf="@id/range_slider2" />

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/range_slider2"
        android:layout_width="200dp"
        android:layout_height="10dp"
        android:valueFrom = "10.0"
        android:valueTo = "100.0"
        app:trackColor = "#6B82F7"
        app:layout_constraintStart_toEndOf="@id/dropdown_card"
        app:layout_constraintTop_toBottomOf="@id/range_slider1"
        android:layout_marginTop="60dp"
        app:values="@array/slider_values" />



</androidx.constraintlayout.widget.ConstraintLayout>